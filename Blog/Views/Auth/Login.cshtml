@model LoginViewModel
@{
}

<div class="container">

    <h2 class="mb-4">Sign In</h2>
    <div class="row">
        <form class="col-xl-3 col-lg-4 col-md-6" asp-controller="Auth" asp-action="Login" method="post">

            <div class="form-group">
                <label>Username</label>
                <input class="form-control" asp-for="UserName" placeholder="Username">
            </div>

            <div class="form-group mb-4">
                <label>Password</label>
                <input class="form-control" asp-for="Password" placeholder="Password">
            </div>

            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
    </div>
</div>